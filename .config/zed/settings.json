// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "active_pane_modifiers": {
    "border_size": 0,
    "inactive_opacity": 1
  },
  "bottom_dock_layout": "right_aligned", // THIS DOESNT DO SHIT
  "agent_ui_font_size": null,
  "allow_rewrap": "anywhere",
  "auto_indent": true,
  "auto_indent_on_paste": true,
  "auto_install_extensions": {},
  "autosave": {
    "after_delay": {
      "milliseconds": 6000
    }
  },
  "autoscroll_on_clicks": true,
  "auto_signature_help": true,
  "show_signature_help_after_edits": true,
  "auto_update": false,
  "base_keymap": "VSCode",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_features": {
    "calt": true
  },
  "buffer_font_fallbacks": [
    ".ZedMono"
  ],
  "buffer_font_size": 14,
  "buffer_font_weight": 450,
  "buffer_line_height": "comfortable",
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  "close_on_file_delete": false,
  "confirm_quit": false,
  "diagnostics_max_severity": null,
  "disable_ai": false,
  "double_click_in_multibuffer": "select",
  "drop_target_size": 0.25,
  "edit_predictions": {
    "disabled_globs": [
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**/.dev.vars",
      "**/secrets.yml"
    ]
  },
  "edit_predictions_disabled_in": [
    "comment",
    "string"
  ],
  "current_line_highlight": "gutter",
  "selection_highlight": true,
  "rounded_selection": true,
  "cursor_blink": true,
  "cursor_shape": "bar",
  "gutter": {
    "line_numbers": true,
    "runnables": false,
    "breakpoints": true,
    "folds": true,
    "min_line_number_digits": 4
  },
  "hide_mouse": "on_typing_and_movement",
  "snippet_sort_order": "inline",
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": false,
    "search_results": true,
    "selected_text": true,
    "selected_symbol": true,
    "diagnostics": "error",
    "axes": {
      "horizontal": false,
      "vertical": true
    }
  },
  "minimap": {
    "show": "never",
    "thumb": "always",
    "thumb_border": "none",
    "current_line_highlight": "all"
  },
  "tab_bar": {
    "show": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history",
    "show_close_button": "hover",
    "show_diagnostics": "errors"
  },
  "inline_code_actions": true,
  "drag_and_drop_selection": {
    "enabled": true,
    "delay": 300
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": true,
    "agent_review": false,
    "code_actions": true
  },
  "use_system_window_tabs": false,
  "enable_language_server": true,
  "ensure_final_newline_on_save": true,
  "expand_excerpt_lines": 5,
  "excerpt_context_lines": 2,
  "extend_comment_on_newline": false,
  "status_bar": {
    "active_language_button": true,
    "cursor_position_button": false
  },
  "lsp": {},
  "global_lsp_settings": {
    "button": true
  },
  "lsp_highlight_debounce": 75,
  "features": {
    "edit_prediction_provider": null
  },
  "format_on_save": "on",
  "formatter": "language_server",
  "use_autoclose": true,
  "always_treat_brackets_as_autoclosed": true,
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ],
  "file_scan_inclusions": [
    ".env*"
  ],
  // https://zed.dev/docs/configuring-zed#file-types
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    },
    "branch_picker": {
      "show_author_name": true
    },
    "hunk_style": "staged_hollow"
  },
  "go_to_definition_fallback": "none",
  "hard_tabs": false,
  "helix_mode": false,
  "indent_guides": {
    "enabled": true,
    "line_width": 2,
    "active_line_width": 1,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "hover_popover_enabled": true,
  "hover_popover_delay": 300,
  "icon_theme": "Material Icon Theme",
  "image_viewer": {
    "unit": "binary"
  },
  // https://zed.dev/docs/configuring-zed#inlay-hints
  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },
  "jsx_tag_auto_close": {
    "enabled": true
  },
  // https://zed.dev/docs/configuring-zed#languages
  // https://zed.dev/docs/configuring-zed#language-models
  "line_indicator_format": "short",
  "linked_edits": true,
  "lsp_document_colors": "background",
  "max_tabs": null,
  "multi_cursor_modifier": "alt",
  "node": {
    "ignore_system_version": false,
    "path": null,
    "npm_path": null
  },
  // https://zed.dev/docs/configuring-zed#network-proxy
  "on_last_window_closed": "quit_app",
  // https://zed.dev/docs/configuring-zed#profiles
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_keep_preview_on_code_navigation": true
  },
  // https://zed.dev/docs/configuring-zed#file-finder
  "tab_size": 2,
  // https://zed.dev/docs/configuring-zed#tasks
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // https://zed.dev/docs/configuring-zed#terminal
  // https://zed.dev/docs/configuring-zed#terminal-detect_venv
  // https://zed.dev/docs/configuring-zed#repl
  "theme": {
    "mode": "dark",
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Latte"
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_project_items": true,
    "show_onboarding_banner": false,
    "show_user_picture": false,
    "show_sign_in": false,
    "show_menus": false
  },
  "vim_mode": false,
  "when_closing_with_no_tabs": "close_window",
  "project_panel": {
    "button": true,
    "default_width": 260,
    "dock": "left",
    "entry_spacing": "comfortable",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 10,
    "auto_reveal_entries": true,
    "auto_fold_dirs": false,
    "drag_and_drop": true,
    "scrollbar": {
      "show": "auto"
    },
    "sticky_scroll": true,
    "show_diagnostics": "errors",
    "indent_guides": {
      "show": "never"
    },
    "hide_root": true,
    "starts_open": true
  },
  "agent": {
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "model_parameters": []
  },
  "collaboration_panel": {
    "button": false,
    "dock": "right",
    "default_width": 240
  },
  "debugger": {
    "stepping_granularity": "line",
    "save_breakpoints": true,
    "dock": "bottom",
    "button": true
  },
  "git_panel": {
    "button": true,
    "dock": "left",
    "default_width": 360,
    "status_style": "label_color",
    "fallback_branch_name": "main",
    "sort_by_path": false,
    "collapse_untracked_diff": true,
    "scrollbar": {
      "show": "auto"
    }
  }
  // https://zed.dev/docs/configuring-zed#outline-panel
}
